{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "noImplicitAny": false,
        "rootDir": ".",
        "types": [
            "node"
         ],
         "typeRoots": [
           "node_modules/@types"
        ],
        "lib": [
          "es2015",
          "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
