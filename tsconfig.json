{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "module": "commonjs",
        "sourceMap": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist/src/",
        "noImplicitAny": false,
        "allowJs": true,
        "rootDir": "./src",
        "types": [
            "node"
         ],
         "typeRoots": [
           "node_modules/@types"
        ],
        "lib": [
          "es2015",
          "dom"
        ]
    },
    "include": [
        "src/**/*",
    ]
}
